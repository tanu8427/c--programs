#include<bits/stdc++.h>

using namespace std;
int main(){
    int n;
    
    cout<<"Enter the number of subject:";  //number of subject user entered
    cin>>n;
    
    int a[n];
    float sum =0 ;
    float percentage ;
    
    cout<<"Enter the marks of subject:";
    for(int i =0;i<n;i++){
        cin>>a[i];
        sum = sum+a[i];       //total mark obtained
        
    } cout<<"The Total marks is: "<<sum<<endl;
      percentage = sum/n;    //percentage user got 
      cout<<"The percentage you achive :"<<percentage<<endl;
      
      
      return 0;
    
    
}
